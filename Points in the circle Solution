static int pointsNumber(int radius)
{
  int count = 0;
  for (int x = -radius; x <= radius; ++x)
  {
      for (int y = -radius; y <= radius; ++y)
      {
          if (x*x + y*y <= radius*radius && x % 1 == 0 && y %1 ==0)
          {
            count++;
          }
          
      }
  }
  return count;
}
